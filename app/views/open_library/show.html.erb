
<br>
<%= form_tag({controller: "open_library", action: "show", format: :json}, method: "get",  id: "book_form", remote: true) do %>
  <%= text_field_tag(:isbn) %>
  <%= submit_tag("Search Book") %>
<% end %>

<script>
$("#book_form").submit(function(event){
  event.preventDefault(event);
  $.ajax({
    type:"GET",
    url:"/api/v1/open_library/"+$("#isbn").val(),
    dataType:"json"
  }).done(function(data) {
    console.log(data.resp);
  }).fail(function(data){
    console.log(data.responseText);
  });
});

</script>
